# Square Payment Configuration for vibehotelbookings.com
# Upload this as .env file to your IONOS webspace root directory

NODE_ENV=production
PORT=443

# Site Configuration
VITE_API_URL=https://vibehotelbookings.com/api

# Square Payment Configuration (REPLACE WITH YOUR ACTUAL VALUES)
VITE_SQUARE_APPLICATION_ID=YOUR_PRODUCTION_APPLICATION_ID_HERE
VITE_SQUARE_LOCATION_ID=YOUR_PRODUCTION_LOCATION_ID_HERE
VITE_ENABLE_MOCK_PAYMENTS=false

# Backend Square Configuration  
SQUARE_ACCESS_TOKEN=YOUR_PRODUCTION_ACCESS_TOKEN_HERE
SQUARE_APPLICATION_ID=YOUR_PRODUCTION_APPLICATION_ID_HERE
SQUARE_ENVIRONMENT=production
SQUARE_LOCATION_ID=YOUR_PRODUCTION_LOCATION_ID_HERE

# Hotel APIs
LITEAPI_API_KEY=your-liteapi-key
OPENAI_API_KEY=your-openai-key

# Database
LOCAL_SQLITE=true

# Security
JWT_SECRET=your-secure-32-char-secret
CORS_ORIGIN=https://vibehotelbookings.com

# Email
EMAIL_PROVIDER=smtp
EMAIL_FROM=bookings@vibehotelbookings.com