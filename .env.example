# VIBE HOTELS - Development Environment Configuration
# Copy this file to .env and fill in your sandbox values for local development.

# Square Payment Configuration (Sandbox for Development)
# Get these from: https://developer.squareup.com/apps > Your App > Sandbox
VITE_SQUARE_APPLICATION_ID="sandbox-sq0idb-XXXXXXXXXXXXXXXXXXXXXXXX"
VITE_SQUARE_LOCATION_ID="LXXXXXXXXXXXXXXXX"

# API Configuration
VITE_API_URL="http://localhost:3001"

# Hotel Search API (LiteAPI for real hotel data)
VITE_LITEAPI_KEY="YOUR_LITEAPI_KEY_HERE"

# AI Integration (OpenAI for natural language search)
VITE_OPENAI_API_KEY="YOUR_OPENAI_KEY_HERE"

# Development Features
VITE_ENABLE_DEBUG="true"
VITE_ENABLE_MOCK_PAYMENTS="false"
