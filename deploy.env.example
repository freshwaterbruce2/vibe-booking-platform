# Production Environment Variables for Vibe Hotel Booking
# Copy this file to .env.production for deployment

# Backend API Configuration
VITE_API_URL=https://your-backend-api.railway.app
# For local testing: VITE_API_URL=http://localhost:3001

# Required API Keys (get from respective providers)
OPENAI_API_KEY=sk-your-openai-api-key
LITEAPI_API_KEY=your-liteapi-key

# Square Payment Configuration
SQUARE_APPLICATION_ID=your-square-app-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_ENVIRONMENT=sandbox
# Change to 'production' for live payments

# Database (Railway will provide automatically)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration (generate secure random keys)
JWT_SECRET=your-super-secure-jwt-secret-key-64-chars-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-64-chars-minimum
JWT_RESET_SECRET=your-super-secure-reset-secret-key-64-chars-minimum

# Optional Services
SENTRY_DSN=https://your-sentry-dsn-url
EMAIL_FROM=noreply@yourdomain.com
EMAIL_API_KEY=your-sendgrid-or-email-api-key

# CORS Origins (frontend URLs)
CORS_ORIGIN=https://your-app.netlify.app,https://your-domain.com