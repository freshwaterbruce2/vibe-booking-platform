# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=1.0.0
API_BASE_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hotelbooking
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# LiteAPI Configuration
LITEAPI_API_KEY=your-liteapi-key
LITEAPI_BASE_URL=https://api.liteapi.travel/v1
LITEAPI_TIMEOUT=30000

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_CURRENCY=usd

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@hotelbooking.com
EMAIL_API_KEY=
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BUCKET=hotelbooking-uploads
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false