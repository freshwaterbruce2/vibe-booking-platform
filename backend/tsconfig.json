{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@vibe/contracts": ["../packages/contracts/src"],
      "@vibe/contracts/*": ["../packages/contracts/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/test/**",
    "src/__tests__/**",
    "src/database/setupLocal.ts",
    "src/utils/gdprCompliance.ts",
    "src/database/connectionPool.ts",
    "src/database/schema/views.ts",
    "src/database/schema/triggers.ts",
    "src/services/refund.ts",
    "src/services/securityMonitoring.ts",
    "src/services/monitoringService.ts",
    "src/services/pdfService.ts",
    "src/routes/admin.ts",
    "src/middleware/security.ts",
    "src/middleware/errorHandler.ts",
    "src/routes/auth.ts",
    "src/routes/users.ts",
    "src/routes/webhooks.ts",
    "src/services/emailService.ts",
    "src/services/squarePaymentService.ts",
    "src/services/squareService.ts",
    "src/utils/logger.ts"
  ]
}
