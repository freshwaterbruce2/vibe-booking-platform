# Vibe Booking Platform - SECURE Production Environment Template
# CRITICAL: Replace ALL placeholder values before deployment

# Application
NODE_ENV=production
PORT=3001
API_BASE_URL=https://api.vibebooking.com
API_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
# OR for SQLite:
# DATABASE_PATH=D:/vibe-booking.db
# SQLITE_ENABLE_WAL=true
# SQLITE_TIMEOUT=5000
# SQLITE_BUSY_TIMEOUT=10000

# CRITICAL: Generate secure secrets using: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_SECURE_64_CHARACTER_SECRET_FROM_OPENSSL
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_64_CHARACTER_REFRESH_SECRET
JWT_RESET_SECRET=REPLACE_WITH_SECURE_64_CHARACTER_RESET_SECRET
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# CRITICAL: Replace with real Square production credentials
SQUARE_ACCESS_TOKEN=YOUR_SQUARE_PRODUCTION_ACCESS_TOKEN
SQUARE_ENVIRONMENT=production
SQUARE_LOCATION_ID=YOUR_SQUARE_LOCATION_ID
SQUARE_APPLICATION_ID=YOUR_SQUARE_APPLICATION_ID
SQUARE_WEBHOOK_SIGNATURE_KEY=YOUR_SQUARE_WEBHOOK_SIGNATURE_KEY

# LiteAPI Configuration (Hotel Data)
LITEAPI_API_KEY=YOUR_LITEAPI_PRODUCTION_KEY
LITEAPI_BASE_URL=https://api.liteapi.travel/v3.0
LITEAPI_TIMEOUT=30000

# OpenAI Configuration (AI Search)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# CORS Configuration - UPDATE with your production domains
CORS_ORIGIN=https://vibebooking.com,https://www.vibebooking.com

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@vibebooking.com
EMAIL_API_KEY=YOUR_SENDGRID_API_KEY

# Storage Configuration
STORAGE_PROVIDER=s3
STORAGE_BUCKET=vibebooking-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_URL=redis://your-redis-host:6379

# Monitoring and Logging
SENTRY_DSN=YOUR_SENTRY_DSN
LOG_LEVEL=info
LOG_FILE=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security Headers
HELMET_CSP_DIRECTIVES="default-src 'self'; script-src 'self' https://web.squarecdn.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://connect.squareup.com"
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_FROM_OPENSSL
SESSION_MAX_AGE=86400000

# Admin IP Whitelist (Optional - for admin endpoints)
ADMIN_IP_1=YOUR_ADMIN_IP_1
ADMIN_IP_2=YOUR_ADMIN_IP_2
PRODUCTION_SERVER_IP=YOUR_PRODUCTION_SERVER_IP

# Commission and Business Logic
COMMISSION_RATE=0.05

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# DEPLOYMENT CHECKLIST:
# [ ] Replace all REPLACE_WITH_* values
# [ ] Replace all YOUR_* placeholders
# [ ] Update CORS_ORIGIN with actual domains
# [ ] Generate secure secrets with openssl
# [ ] Test all third-party API connections
# [ ] Verify SSL certificates are valid
# [ ] Configure monitoring and alerting
# [ ] Test backup and restore procedures